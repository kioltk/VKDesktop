<Window x:Class="VKDesktop.Start.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/Resources/icons/favicon.ico"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen" 
        Title="StartWindow" Height="315" Width="705">
    <Window.Background>
        <ImageBrush ImageSource="..\Resources\images\vkontakte-full.jpg" />
    </Window.Background>
    <Grid >
        <TextBlock Name="HelloUser" Foreground="White" TextAlignment="Center" Margin="136,201,136,81"/>
        <TextBlock Foreground="White" Margin="136,231,136,10" TextAlignment="Center" Text="{Binding State}"/>
        <TextBlock HorizontalAlignment="right" TextAlignment="Right" FontSize="11" FontStyle="Italic" Margin="0,0,8,8" Foreground="White"  Text="{Binding Summary}" VerticalAlignment="Bottom" />
    </Grid>
</Window>
